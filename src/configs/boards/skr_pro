
if [ ${MARLIN_CONFIG_VERSION} -gt 020006 ]; then
  opt_set MOTHERBOARD "BOARD_BTT_SKR_PRO_V1_2"
  echo "Marlin 2.0.6+"
else
  opt_set MOTHERBOARD "BOARD_BTT_SKR_PRO_V1_1"
  echo "Marlin 2.0.6-"
fi

opt_set SERIAL_PORT 1
opt_set SERIAL_PORT_2 -1

opt_set DEFAULT_AXIS_STEPS_PER_UNIT "{ 100, 100, 400, 100 }"

opt_add SPINDLE_LASER_ENA_PIN PB0   // Heater2
opt_add SPINDLE_LASER_PWM_PIN PC9


pushd Marlin/src/HAL
rm -rf AVR DUE ESP32 LINUX LPC1768 SAMD51 TEENSY*
popd

# Write some useful tidbits to the readme.
echo "- Configured for Skr Pro v1.2" >> README.md

# Spindle Control Using M3 and M4 along with a relay on temp pin 1 (PF5)
opt_enable SPINDLE_FEATURE
opt_set	SPINDLE_LASER_PWM "false"
opt_disable SPINDLE_LASER_FREQUENCY
#sed -i 's.^#define TEMP_1_PIN.//#define TEMP_1_PIN.g' Marlin/src/pins/stm32f4/pins_BTT_SKR_PRO_common.h
#echo "" >> Marlin/src/pins/stm32f4/pins_BTT_SKR_PRO_common.h
#echo "#define SPINDLE_LASER_ENA_PIN      PF5" >> Marlin/src/pins/stm32f4/pins_BTT_SKR_PRO_common.h
